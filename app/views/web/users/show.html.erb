<div class="container-fluid centered bg-img">
  <div class="card shadow-sm p-3 pb-0" style="width: 36rem;">
    <div class="card-body">
      <div class="card-title text-center mb-4">My profile</div>
      <hr>  
      <div class="row">
        <div class="col-5 profile_avatar">
          <% if current_user.avatar? %>
            <%= image_tag("#{current_user.avatar}", alt: "avatar") %>
          <% else %>
            <%= image_tag("anon.png", alt: "avatar") %>
          <% end %>
        </div>
        <div class="col-7 mb-4 text_link">
          <div class="mb-2">
            <span>First name: <strong><%= @user.first_name %></strong></span>
          </div>
          <div class="mb-2">
            <span>Last name: <strong><%= @user.last_name %></strong></span>
          </div>
          <div class="mb-3">
            <span>E-mail: <strong><%= @user.email %></strong></span>
          </div>
          <% unless @user.owned_groups.blank? %>
            <div class="italic">Owned groups:</div> 
            <% @user.owned_groups.each do |g| %>
              <div>
                <%= link_to "#{g.title}", group_path(g) %>   
              </div>
            <% end %> 
          <% end %>
        </div>
      </div>
      <div class="d-flex flex-row-reverse mb-4 pl-4">
        <%= button_to "/users/#{current_user.id}", method: "delete", class: 'btn btn-sm btn-danger' do %>
          <i class="fas fa-trash"></i>&nbsp;
          <%= "Delete account" %>
        <% end %>
        <%= button_to edit_profile_path, method: "get", class: 'btn btn-sm btn-info me-md-2' do %>
          <i class="fas fa-edit"></i>&nbsp;
          <%= "Edit profile" %>
        <% end %>
      </div>  
    </div>
  </div>
