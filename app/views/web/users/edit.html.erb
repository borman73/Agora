<div class="container-fluid centered bg-img">
  <div class="card shadow-sm p-3 pb-0" style="width: 24rem;">
    <div class="card-body">
      <h5 class="card-title text-center">Edit profile</h5>
        <%= simple_form_for @user, as: :user, url: user_path(@user) do |f| %>
          <div class="mb-3">
            <%= f.input :first_name %>
          </div> 
          <div class="mb-3">
            <%= f.input :last_name %>
          </div> 
          <div class="mb-3">
            <%= f.input :email %>
          </div> 
          <div class="mb-3">
            <%= f.input :password %>
          </div>
          <div class="mb-3">
            <%= f.input :password_confirmation%>
          </div> 
          <div class="mb-3 spread">
            <%= f.button :submit, "Confirm", class: 'btn btn-primary btn-floating' %>
            <%= f.button :submit, "< Back", formaction: my_profile_path, formmethod: "get",
                class: 'btn btn-sm btn-outline-secondary btn-floating' %>
          </div> 
        <% end %>
    </div>
  </div>
